{
  "all": true,
  "include": ["pages/**/*.ts", "test/support/**/*.ts"],
  "exclude": [
    "test/steps/**/*.ts",
    "test/features/**/*.feature",
    "scripts/**",
    "config/**",
    "**/*.d.ts",
    "**/*.config.ts",
    "**/node_modules/**",
    "coverage/**",
    "test-results/**",
    "allure-results/**",
    "allure-report/**"
  ],
  "reporter": ["html", "text", "json-summary", "lcov"],
  "lines": 80,
  "functions": 80,
  "branches": 75,
  "statements": 80,
  "check-coverage": true,
  "report-dir": "coverage",
  "clean": true
}
